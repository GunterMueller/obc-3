# Config stuff
prefix = @prefix@
exec_prefix = @exec_prefix@
srcdir = @srcdir@
subdir = lib
top_srcdir = @top_srcdir@
LIBDIR = @libdir@/obc
CC = @CC@
AR = ar
LD = @LD@
RANLIB = @RANLIB@
CFLAGS = @CFLAGS@
RTFLAGS = @RTFLAGS@
X_CFLAGS = @X_CFLAGS@
PACKAGE_VERSION = @PACKAGE_VERSION@
SHELL = /bin/sh
TCLSH = @TCLSH@
DEBUG = @DEBUG@
VPATH = @srcdir@
MODULES = @MODULES@
MODULES_B = @MODULES_B@
PRIMMODS = @PRIMMODS@
SHLMODS = @SHLMODS@
CHECKMODS = @CHECKMODS@
LIBS = @LIBS@
MATHLIB = @MATHLIB@
XLIB = @XLIB@
DYNLINK = @DYNLINK@
DLEXT= @DLEXT@
SHL_CFLAGS = @SHL_CFLAGS@
SHL_LFLAGS = @SHL_LFLAGS@
XYPLANE = @XYPLANE@
# End

ifdef DEBUG
  # During development, recompile library on each compiler change
  LIBDEP = ../compiler/obc1
endif

all:: _Builtin.k $(MODULES:%=%.k) $(CHECKMODS:%=%-b.k) oblib.o \
	lscript lscript-b

STDMODS = Builtin $(PRIMMODS)
ALLMODS := $(STDMODS) $(SHLMODS)

ifdef DYNLINK
all:: $(SHLMODS:%=%$(DLEXT))
else
all:: primtab.o
STDMODS += $(SHLMODS)
endif


### Bytecode files

OBC1 = ../compiler/obc1

REVID := $(shell cat ../revid)

Builtin.m: Builtin.m.in ../revid
	sed -e 's/@VERSION@/$(PACKAGE_VERSION)/' \
		-e 's/@REVID@/$(REVID)/' $< >$@

_Builtin.k: Builtin.m ../revid
	$(OBC1) -w -b $< | \
	    sed -e 's/Builtin\.\([^%]\)/\1/g' -e 's/Builtin/_Builtin/' >$@

_Builtin.k: $(LIBDEP)
$(MODULES:%=%.k) $(CHECKMODS:%=%-b.k): $(LIBDEP) _Builtin.k
In.k Out.k Err.k In-b.k : Files.k
In.k In-b.k : Conv.k
$(SHLMODS:%=%.k) : DynLink.k

%.k: %.m
	$(OBC1) -O -g -x $< >$@

%-b.k: %.m
	$(OBC1) -O -g -x -b $< >$@


### C and object code for primitives

ALL_RTFLAGS = $(RTFLAGS) -Wall $(INCLUDE)
INCLUDE = -I .. -I $(top_srcdir)/runtime -I ../runtime

oblib.o: $(STDMODS:%=%.o)
	$(LD) -r $^ -o $@

$(ALLMODS:%=%.c): %.c: %.m makeprims.tcl
	$(TCLSH) $(srcdir)/makeprims.tcl $< >$@

XYplane$(DLEXT): XYplane.c
	$(CC) $(ALL_RTFLAGS) $(X_CFLAGS) $(SHL_CFLAGS) \
		$(SHL_LFLAGS) $< $(LIBS) $(XLIB) -o $@

Math$(DLEXT) MathL$(DLEXT): %$(DLEXT): %.c
	$(CC) $(ALL_RTFLAGS) $(SHL_CFLAGS) \
		$(SHL_LFLAGS) $< $(LIBS) $(MATHLIB) -o $@

%$(DLEXT): %.c
	$(CC) $(ALL_RTFLAGS) $(SHL_CFLAGS) $(SHL_LFLAGS) $< $(LIBS) -o $@

%.o: %.c
	$(CC) $(ALL_RTFLAGS) -c $< -o $@

$(ALLMODS:%=%.o) $(SHLMODS:%=%$(DLEXT)) primtab.o: \
	../config.h $(top_srcdir)/runtime/obx.h \
	$(top_srcdir)/runtime/obcommon.h

primtab.c: $(STDMODS:%=%.m)
	$(TCLSH) $(srcdir)/makeprims.tcl -t $^ >$@


### Library scripts

lscript: ../config.status
	for m in _Builtin $(MODULES); do echo $$m.k; done >$@

lscript-b : ../config.status
	for m in _Builtin $(MODULES_B); do echo $$m.k; done >$@


## Cleanup

# clean: remove all object files
clean:
	rm -f *.o *.k *.k0 *.so *.dylib

quiteclean: clean
	rm -f lscript* Builtin.m
	rm -f _Builtin.c $(PRIMMODS:%=%.c) $(SHLMODS:%=%.c)

# distclean: also remove all non-distributed files
realclean distclean: quiteclean
	rm -f Makefile 


.DELETE_ON_ERROR:

## Configuration

Makefile: $(srcdir)/Makefile.in ../config.status
	cd .. && ./config.status $(subdir)/$@
