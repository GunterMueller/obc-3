# Config stuff
top_srcdir = @top_srcdir@
srcdir = @srcdir@
subdir = armtest
SHELL = /bin/sh
# End

REVID := $(shell cat ../revid)

CC = arm-linux-gnueabihf-gcc -marm -march=armv6
CFLAGS = -g -O2 $(INCLUDE)
INCLUDE = -I . -I $(top_srcdir)/runtime -I $(top_srcdir)/thunder \
	-I ../runtime
RTFLAGS = -rdynamic
LIBS = -ldl
LIBDIR = /usr/arm-linux-gnueabihf/lib
OBXJ = jit.o jitlab.o jitregs.o jitval.o vmpi.o labels.o vmdebug.o \
	codebuf.o xmain-j.o decode.o support.o loader.o dynlink.o gc.o
PRIMS = Builtin Args GC Timer DynLink Files Conv Random
DLPRIMS = Math MathL
TCLSH = tclsh

vpath %.c $(top_srcdir)/runtime $(top_srcdir)/thunder ../runtime ../lib
vpath %.h $(top_srcdir)/runtime $(top_srcdir)/thunder ../runtime

all: obxj-arm $(DLPRIMS:%=%.so) regress sanity

obxj-arm: $(OBXJ) $(PRIMS:%=%.o)
	$(CC) $(RTFLAGS) -o $@ $^ $(LIBS)

xmain-j.o: xmain.c
	$(CC) $(CFLAGS) -DJIT -DREVID=\"$(REVID)\" -c $< -o $@

Math.so MathL.so: %.so: %.c
	$(CC) $(CFLAGS) -fPIC -shared $< -lm -o $@

primtab.c: $(PRIMS:%=../lib/%.m)
	$(TCLSH) ../lib/makeprims.tcl -t $^ >$@

config.h: $(srcdir)/config.h.in
	cd .. && ./config.status --file=$(subdir)/$@

regress: $(srcdir)/regress.in
	cd .. && ./config.status --file=$(subdir)/$@
	chmod +x $@

sanity: force
	env OBC_LIB=. qemu-arm -B 0x100000 $(LIBDIR)/ld-linux.so.3 \
	    --library-path $(LIBDIR) ./obxj-arm ../Fac.x 19
	@echo The factorial of 19 is 121645100408832000

force:

.DELETE_ON_ERROR:

## Cleanup

# clean: remove object files
clean: force
	rm -f obxj-arm *.o *.so primtab.c *.k a.out data out.0 out config.h code

# quiteclean: remove generated files too
quiteclean: clean

# distclean: also remove all non-distributed files
distclean: quiteclean

realclean: distclean
	rm -f Makefile regress

## Configuration and dependencies

Makefile: $(srcdir)/Makefile.in ../config.status
	cd .. && ./config.status $(subdir)/$@

### Crude approximation

$(OBXJ) $(PRIMS:%=%.o): \
	obx.h obcommon.h config.h exec.h keiko.h decode.h ../thunder/vm.h
